# Azure Production Example Configuration
# Copy this file to terraform.tfvars and fill in your values

resource_group_name = "atb-prod-rg"
location            = "westeurope"
cluster_name        = "atb-prod-aks"
trust_domain        = "atb.example.com"

# Networking
vnet_address_space     = ["10.0.0.0/16"]
subnet_address_prefix  = "10.0.0.0/20"
enable_private_cluster = true

# Monitoring (optional)
# log_analytics_workspace_id = "/subscriptions/.../resourceGroups/.../providers/Microsoft.OperationalInsights/workspaces/..."

# Container images
broker_image    = "ghcr.io/mauriciomferz/atb-broker:v1.0.0"
agentauth_image = "ghcr.io/mauriciomferz/atb-agentauth:v1.0.0"

# Connectors
connectors = {
  sap = {
    type     = "sap"
    endpoint = "https://sap.example.com/api"
    auth     = "spiffe"
    config = {
      client_id = "atb-client"
    }
  }
  # servicenow = {
  #   type     = "servicenow"
  #   endpoint = "https://instance.service-now.com/api"
  #   auth     = "oauth2"
  # }
}

# Tags
tags = {
  Project     = "ATB"
  Environment = "production"
  ManagedBy   = "terraform"
  CostCenter  = "IT"
}
