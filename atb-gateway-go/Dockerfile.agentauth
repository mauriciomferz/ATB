# syntax=docker/dockerfile:1

FROM golang:1.22 AS build
WORKDIR /src

COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -trimpath -ldflags="-s -w" -o /out/atb-agentauth ./cmd/agentauth

FROM gcr.io/distroless/base-debian12:nonroot
WORKDIR /
COPY --from=build /out/atb-agentauth /atb-agentauth

EXPOSE 9090

ENTRYPOINT ["/atb-agentauth"]
